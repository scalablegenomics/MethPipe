{
    "$type": "Form",
    "fields": [
        {
            "$type": "TextBox",
            "id": "app-session-name",
            "label": "Analysis Name",
            "maxLength": 150,
            "minLength": 0,
            "required": true,
            "requiredMessage": "Please enter name for your app session.",
            "size": 400,
            "value": "Example [LocalDateTime]"
        },
        {
            "$type": "FileChooser",
            "allowedPermissions": "read",
            "chooserType": "ByProject",
            "extensionFilters": ".fq, .fastq",
            "id": "fastq-file-T-rich",
            "label": "Input read file",
            "multiselect": false,
            "required": true,
            "requiredMessage": "Please choose a file",
            "size": 400,
            "valueType": "Input"
        },
        {
            "$type": "FileChooser",
            "allowedPermissions": "read",
            "chooserType": "ByProject",
            "extensionFilters": ".fq, .fastq",
            "id": "fastq-file-A-rich",
            "label": "Input read file (second mate; if single-end, leave blank)",
            "multiselect": false,
            "required": false,
            "size": 400,
            "value": "NA",
            "valueType": "Input"
        },
        {
        "$type": "Select",
         "id": "genome-id",
         "label": "Reference Genome",
         "choices": [ 
          { 
              "value": "Human",
              "text": "Human (UCSC hg19)",
              "selected": "true"
          },
          { 
              "value": "Mouse",
              "text": "Mouse (UCSC mm10)",
              "selected": "false"
          },
          { 
              "value": "Rat",
              "text": "Rat (UCSC rn5)",
              "selected": "false"
          }  ]
        },
        {
            "$type": "SectionBreak"
        },
        {
            "$type": "ProjectChooser",
            "allowResourceCreation": true,
            "allowedPermissions": "owner",
            "id": "project-id",
            "label": "Save Results To",
            "required": true,
            "requiredMessage": "Please choose a project",
            "rules": "is-project-owner",
            "size": 400,
            "valueType": "Output"
        },
        {
            "$type": "SectionBreak"
        },
        {
            "$type": "FieldSet",
            "fields": [
                {
                    "$type": "Numeric",
                    "id": "max-mismatch",
                    "label": "Max mismatches allowed in reads (can be fractional)",
                    "max": 100,
                    "min": 0,
                    "numericType": "Integer",
                    "required": false,
                    "size": 50,
                    "value": 6
                },
                {
                    "$type": "Numeric",
                    "id": "max-mapping-locs",
                    "label": "maximum allowed mappings for a read",
                    "max": 100,
                    "min": 1,
                    "numericType": "Integer",
                    "required": false,
                    "size": 50,
                    "value": 1
                },
                {
                    "$type": "TextBox",
                    "id": "adapter-seq",
                    "label": "Adapter sequences",
                    "required": false,
                    "requiredMessage": "Please enter name for your app session.",
                    "size": 300,
                    "value": ""
                }
            ],
            "id": "mapping",
            "isCollapsible": true,
            "isOpen": false,
            "label": "Options for mapping reads"
        },
        {
            "$type": "SectionBreak"
        },
        {
            "$type": "FieldSet",
            "fields": [
                {
                    "$type": "Numeric",
                    "id": "max-read-length",
                    "label": "max read length in input file",
                    "max": 10000,
                    "min": 20,
                    "numericType": "Integer",
                    "required": false,
                    "size": 50,
                    "value": 10000
                },
                {
                    "$type": "RadioButton",
                    "choices": [
                        {
                            "value": 1
                        }
                    ],
                    "id": "non-CpG",
                    "label": "Process non-CpG sites:",
                    "togglers": [
                        {
                            "toggleFields": "non-CpG",
                            "toggleOnValue": 1
                        }
                    ]
                }
            ],
            "id": "mapping",
            "isCollapsible": true,
            "isOpen": false,
            "label": "Options for estimating methylation level, coverage and conversion rate"
        },
        {
            "$type": "SectionBreak"
        },
        {
            "$type": "FieldSet",
            "fields": [
                {
                    "$type": "Numeric",
                    "id": "num-iter",
                    "label": "Number of iterations when training model",
                    "max": 100,
                    "min": 0,
                    "numericType": "Integer",
                    "required": false,
                    "size": 50,
                    "value": 15
                },
                {
                    "$type": "Numeric",
                    "id": "desert-size",
                    "label": "Max distance between CpGs with reads in HMR",
                    "max": 20000,
                    "min": 5000,
                    "numericType": "Integer",
                    "required": false,
                    "size": 50,
                    "value": 10000
                },
                {
                    "$type": "RadioButton",
                    "choices": [
                        {
                            "value": 1
                        }
                    ],
                    "id": "do-pmd",
                    "label": "Identify PMRs instead of HMRs:",
                    "required": false,
                    "togglers": [
                        {
                            "toggleFields": "do-pmd",
                            "toggleOnValue": 1
                        }
                    ]
                }
            ],
            "id": "hmr-op",
            "isCollapsible": true,
            "isOpen": false,
            "label": "Options for identifying hypo-methylated regions"
        },
        {
            "$type": "SectionBreak"
        },
        {
            "$type": "FieldSet",
            "fields": [
                {
                    "$type": "RadioButton",
                    "choices": [
                        {
                            "value": 1
                        }
                    ],
                    "id": "amr-enable",
                    "label": "Call AMR identification program (disabled by default)",
                    "required": false,
                    "togglers": [
                        {
                            "toggleFields": "amr-enable",
                            "toggleOnValue": 1
                        }
                    ]
                },
                {
                    "$type": "Numeric",
                    "id": "amr-num-iter",
                    "label": "Number of iterations for EM during AMR identification",
                    "max": 100,
                    "min": 10,
                    "numericType": "Integer",
                    "required": false,
                    "size": 50,
                    "value": 15
                },
                {
                    "$type": "Numeric",
                    "id": "amr-sliding-win-size",
                    "label": "Sliding window size",
                    "max": 1000,
                    "min": 100,
                    "numericType": "Integer",
                    "required": false,
                    "size": 50,
                    "value": 200
                },
                {
                    "$type": "Numeric",
                    "id": "amr-min-coverage",
                    "label": "Min coverage per CpG",
                    "max": 1000,
                    "min": 5,
                    "numericType": "FloatingPoint",
                    "required": false,
                    "size": 50,
                    "value": 5
                },
                {
                    "$type": "Numeric",
                    "id": "amr-allowed-gap",
                    "label": "Min allowed gaps between AMRs when merging (in bp)",
                    "max": 500,
                    "min": 0,
                    "numericType": "Integer",
                    "required": false,
                    "size": 50,
                    "value": 200
                },
                {
                    "$type": "Numeric",
                    "id": "amr-pval-cutoff",
                    "label": "P-value cutoff",
                    "max": 0.1,
                    "min": 0,
                    "numericType": "FloatingPoint",
                    "required": false,
                    "size": 50,
                    "value": 0.01
                },
                {
                    "$type": "RadioButton",
                    "choices": [
                        {
                            "value": 1
                        }
                    ],
                    "id": "amr-BH-adjust",
                    "label": "Use Benjaminin-Hochberg adjustment",
                    "required": false,
                    "togglers": [
                        {
                            "toggleFields": "amr-BH-adjustment",
                            "toggleOnValue": 1
                        }
                    ]
                },
                {
                    "$type": "RadioButton",
                    "choices": [
                        {
                            "value": 1
                        }
                    ],
                    "id": "amr-use-BIC",
                    "label": "Use BIC to compare models",
                    "required": false,
                    "togglers": [
                        {
                            "toggleFields": "amr-use-BIC",
                            "toggleOnValue": 1
                        }
                    ]
                }
            ],
            "id": "amr-op",
            "isCollapsible": true,
            "isOpen": false,
            "label": "Options for identifying allelic methylated regions"
        }
    ],
    "rulesets": [
        {
            "$type": "PermissionValidationRule",
            "id": "sample-reader",
            "message": "You do not have read access to the selected sample",
            "permissions": "Read",
            "severity": "Error"
        },
        {
            "$type": "PermissionValidationRule",
            "id": "is-project-owner",
            "message": "You aren't the owner of the selected project.",
            "permissions": "Own",
            "severity": "Error"
        }
    ]
}
